{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "NodeNext",
		"sourceMap": true,
		"declaration": true,
		"lib": ["es2022"],
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/*", "tests/*", "vitest.config.mjs"],
	"exclude": ["dist", "node_modules"]
}
